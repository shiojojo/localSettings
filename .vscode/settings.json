{
  // Show extension recommendations.
  "extensions.ignoreRecommendations": false,
  // Enable Emmet expansion when pressing Tab.
  "emmet.triggerExpansionOnTab": true,
  // Format files automatically on save.
  "editor.formatOnSave": true,
  // Set the editor tab size to 2 spaces.
  "editor.tabSize": 2,
  // Enable CSS features in HTML and PHP files.
  "css.enabledLanguages": ["html", "php"],
  // Always validate the CSS.
  "css.autoValidation": "Always",
  // Apply these stylesheets to files matching the pattern.
  "css.styleSheets": ["**/*.{css,scss}"],
  "[html]": {
    // Use Prettier to format HTML files.
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    // Use Prettier to format JavaScript files.
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // Use single quotes in Prettier.
  "prettier.singleQuote": true,
  // Use 'avoid' style for arrow function parentheses in Prettier.
  "prettier.arrowParens": "avoid",
  "[json]": {
    // Use Prettier to format JSON files.
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[php]": {
    // Use Intelephense for formatting PHP files.
    "editor.defaultFormatter": "bmewburn.vscode-intelephense-client"
  },
  // Use K&R style braces for Intelephense.
  "intelephense.format.braces": "k&r",
  // WordPress: include plugin paths.
  "intelephense.environment.includePaths": ["**/plugins/"],
  // Load WordPress-related stubs.
  "intelephense.stubs": ["Core", "standard", "date", "wordpress"],
  "[perl]": {
  },
  // Enable linting for Perl imports.
  "perlnavigator.perlimportsLintEnabled": true,
  // Enable tidy mode for Perl imports.
  "perlnavigator.perlimportsTidyEnabled": true,
  // Enable word wrap in the editor.
  "editor.wordWrap": "on",
  "[yaml]": {
    // Use Red Hat's YAML formatter.
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  // Associate YAML files with Kubernetes schema.
  "yaml.schemas": {
    "kubernetes": ["*.yml", "*.yaml"]
  },
  // Increase voice accessibility speech timeout.
  "accessibility.voice.speechTimeout": 3600,
  // Wrap tabs in the editor.
  "workbench.editor.wrapTabs": true,
  // Use fixed tab sizing in the editor.
  "workbench.editor.tabSizing": "fixed",
  // Do not focus the most recent editor after closing.
  "workbench.editor.focusRecentEditorAfterClose": false,
  "github.copilot.chat.agent.thinkingTool": true,
  "github.copilot.chat.codesearch.enabled": true,
  "terminal.integrated.copyOnSelection": true
}
