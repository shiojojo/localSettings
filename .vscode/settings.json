{
  "extensions.ignoreRecommendations": false,
  "emmet.triggerExpansionOnTab": true,
  "editor.formatOnSave": true,
  "css.enabledLanguages": ["html", "php"],
  "css.autoValidation": "Always",
  "css.styleSheets": ["**/*.{css,scss}"],
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.tabSize": 2
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.tabSize": 2
  },
  "prettier.singleQuote": true,
  "prettier.arrowParens": "avoid",
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.tabSize": 2
  },
  "[php]": {
    "editor.defaultFormatter": "bmewburn.vscode-intelephense-client",
    "editor.formatOnSave": true,
    "editor.tabSize": 2
  },
  "intelephense.format.braces": "k&r",
  // word press
  "intelephense.environment.includePaths": ["**/plugins/"],
  "intelephense.stubs": ["Core", "standard", "date", "wordpress"],
  "[perl]": {
    "editor.formatOnSave": true,
    "editor.tabSize": 2
  },
  "perlnavigator.perlimportsLintEnabled": true,
  "perlnavigator.perlimportsTidyEnabled": true,
  "editor.wordWrap": "on",
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml",
    "editor.formatOnSave": true,
    "editor.tabSize": 2
  },
  "yaml.schemas": {
    "kubernetes": ["*.yml", "*.yaml"],
  "accessibility.voice.speechTimeout": 3600,
}
