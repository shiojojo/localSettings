{
  "extensions.ignoreRecommendations": false,
  "editor.formatOnSave": true,
  "css.enabledLanguages": ["html", "php"],
  "css.autoValidation": "Always",
  "css.styleSheets": ["**/*.css", "**/*.scss"],
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.tabSize": 2
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.tabSize": 2
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.tabSize": 2
  },
  "[php]": {
    "editor.defaultFormatter": "bmewburn.vscode-intelephense-client",
    "editor.formatOnSave": true,
    "editor.tabSize": 2
  },
  "intelephense.format.braces": "k&r",
  // word press
  "intelephense.environment.includePaths": ["**/plugins/"],
  "intelephense.stubs": ["Core", "standard", "date", "wordpress"],
  "[perl]": {
    "editor.formatOnSave": true,
    "editor.tabSize": 2
  },
  "perlnavigator.perlimportsLintEnabled": true,
  "perlnavigator.perlimportsTidyEnabled": true
}
